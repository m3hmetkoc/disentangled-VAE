{
  "name": "small_baseline_vae",
  "data": {
    "root": "./data",
    "train_size": 5000,
    "val_size": 500,
    "test_size": 500,
    "sequence_length": 20,
    "frame_size": 64,
    "num_digits": 2,
    "batch_size": 32,
    "num_workers": 4,
    "seed": 42
  },
  "model": {
    "model_type": "baseline",
    "latent_dim": 128,
    "content_dim": 64,
    "motion_dim": 64,
    "encoder_channels": [16, 32, 64, 128],
    "decoder_channels": [128, 64, 32, 16],
    "motion_channels": [8, 16],
    "feature_dim": 256,
    "lstm_hidden": 128,
    "lstm_layers": 1,
    "bidirectional": true,
    "in_channels": 1,
    "sequence_length": 20,
    "content_aggregation": "mean"
  },
  "training": {
    "learning_rate": 0.0005,
    "beta1": 0.9,
    "beta2": 0.999,
    "weight_decay": 1e-5,
    "beta_vae": 0.5,
    "beta_content": null,
    "beta_motion": null,
    "temporal_weight": 0.0,
    "independence_weight": 0.0,
    "recon_loss_type": "bce",
    "use_kl_annealing": true,
    "warmup_epochs": 25,
    "annealing_type": "linear",
    "kl_start_epoch": 5,
    "use_free_bits": true,
    "free_bits": 0.3,
    "num_epochs": 50,
    "gradient_clip": 5.0,
    "lr_scheduler": "cosine",
    "lr_decay": 0.98,
    "lr_min": 1e-6,
    "device": "mps",
    "save_every": 10,
    "log_every": 50,
    "visualize_every": 5,
    "checkpoint_dir": "./checkpoints",
    "results_dir": "./results"
  }
}

