{
  "name": "disentangled_vae_simple",
  "data": {
    "root": "./data",
    "train_size": 12000,
    "val_size": 1200,
    "test_size": 1200,
    "sequence_length": 20,
    "frame_size": 64,
    "num_digits": 2,
    "batch_size": 32,
    "num_workers": 4,
    "seed": 42
  },
  "model": {
    "model_type": "disentangled",
    "content_dim": 128,
    "motion_dim": 128,
    "encoder_channels": [32, 64, 128, 256],
    "decoder_channels": [256, 128, 64, 32],
    "motion_channels": [16, 32],
    "feature_dim": 512,
    "lstm_hidden": 256,
    "lstm_layers": 1,
    "bidirectional": true,
    "in_channels": 1,
    "sequence_length": 20,
    "content_aggregation": "mean"
  },
  "training": {
    "learning_rate": 0.0003,
    "beta1": 0.9,
    "beta2": 0.999,
    "weight_decay": 1e-5,
    "beta_vae": 0.4,
    "beta_content": 0.4,
    "beta_motion": 0.4,
    "temporal_weight": 0.05,
    "independence_weight": 0.02,
    "recon_loss_type": "bce",
    "use_kl_annealing": true,
    "warmup_epochs": 40,
    "annealing_type": "linear",
    "kl_start_epoch": 10,
    "use_free_bits": true,
    "free_bits": 0.25,
    "num_epochs": 100,
    "gradient_clip": 5.0,
    "lr_scheduler": "cosine",
    "lr_decay": 0.98,
    "lr_min": 1e-6,
    "device": "cuda",
    "save_every": 10,
    "log_every": 50,
    "visualize_every": 10,
    "checkpoint_dir": "./checkpoints",
    "results_dir": "./results"
  }
}
